Core[(

$Lax;

// Top sort
//$Any ::= ( ANY; );

OK_SORT ::= ( OK; );

// --- Optional value

∀ a.Option[a] ::= ( SOME[a]; NONE; );

∀ a.UnSOME[Option[a]] :: a;
UnSOME[SOME[#]] → #;
UnSOME[NONE]    → $[Error, "Error: no optional value."];

// --- Boolean

Boolean ::=( TRUE; FALSE; );

∀ a . If[Boolean, a, a] :: a ;
If[TRUE,  #1, #2] → #1 ;
If[FALSE, #1, #2] → #2 ;

And[Boolean, Boolean] :: Boolean ;
And[TRUE, #]  → # ;
And[FALSE, #] → FALSE ;

Or[Boolean, Boolean] :: Boolean ;
Or[TRUE, #]  → TRUE;
Or[FALSE, #] → #;

WrapBoolean[$Boolean] :: Boolean ;
WrapBoolean[$True]  → TRUE;
WrapBoolean[$False] → FALSE;

UnwrapBoolean[Boolean] :: $Boolean ;
UnwrapBoolean[TRUE]  → $True;
UnwrapBoolean[FALSE] → $False;


)]