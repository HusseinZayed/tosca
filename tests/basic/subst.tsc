// Test syntactic variable substitution

enum Expr
    | Let(Expr, [Expr] -> Expr)
    | Num(Numeric)
    | allows-variable

func EvalExpr(Expr) -> Numeric
rule EvalExpr(Let(#expr1:Expr, [x] -> #expr2[x] : Expr)) → EvalExpr(#expr2[#expr1])
rule EvalExpr(Num(#:Numeric)) → #

func Tests -> Numeric
→ EvalExpr( Let(Num(1), [v:Expr] -> Let(Num(2), [v2:Expr] -> v2)) )
